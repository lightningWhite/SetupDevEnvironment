{
    // General Editor Settings
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    // Vim Settings
    "vim.easymotion": false,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<C-l>"
            ],
            "commands": [
                ":nohl"
            ]
        }
    ],
    "vim.leader": ",",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-n>": false
    },
    // To improve performance
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    // Nerd Tree Settings
    "nerdtree.alwaysShowSidebar": true,
    "nerdtree.hideSidebarWhenOpenFile": false,
    // GitLense Settings
    "gitlens.graph.minimap.additionalTypes": [
        "pullRequests",
        "stashes",
        "remoteBranches",
        "localBranches",
        "tags"
    ],
    // CMake Settings
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    // Clang Format Settings
    "clang-format.executable": "clang-format-11",
    // C++ Settings
    "C_Cpp.default.compileCommands": "${workspaceFolder}/../bld/ubuntu22/compile_commands.json",
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "clang-tidy.executable": "clang-tidy-15",
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "C_Cpp.codeAnalysis.clangTidy.path": "clang-tidy-15",
    // Clang-Tidy Settings
    "clang-tidy.buildPath": "${workspaceFolder}/../bld/ubuntu22",
}