{
    // General Editor Settings
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    // Vim Extension Settings
    "vim.easymotion": false,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<C-l>"
            ],
            "commands": [
                ":nohl"
            ]
        }
    ],
    "vim.leader": ",",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-n>": false
    },
    // To improve performance
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    // Nerd Tree Extension Settings
    "nerdtree.alwaysShowSidebar": true,
    "nerdtree.hideSidebarWhenOpenFile": false,
    // GitLense Extension Settings
    "gitlens.graph.minimap.additionalTypes": [
        "pullRequests",
        "stashes",
        "remoteBranches",
        "localBranches",
        "tags"
    ],
    // Clang Format Extension Settings
    "clang-format.executable": "clang-format-11", // Need to apt install clang-format-11
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    // Clangd Extension Settings
    "clangd.path": "clangd-15", // Need to apt install clangd-15; enables clang-tidy errors to be displayed
    // C++ Extension Settings
    "C_Cpp.intelliSenseEngine": "disabled",
    // Point to the compile_commands.json file in the build directory for intellisense
    "C_Cpp.default.compileCommands": "${workspaceFolder}/../bld/ubuntu22/compile_commands.json",
    // CMake Settings
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ]
}